{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "es2020",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2020", "dom"]
    },
    "exclude": ["dist", ".ng_build", "integration"]
}
